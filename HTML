    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Variables globales
        let port = null;
        let reader = null;
        let isSimulating = false;
        let simulationInterval = null;
        let autoScroll = true;
        
        // Historial de datos
        let historyData = {
            timestamps: [],
            temperatures: [],
            humidities: [],
            status: []
        };
        
        const MAX_HISTORY_RECORDS = 50;

        // Elementos DOM
        const tempValue = document.getElementById('tempValue');
        const humValue = document.getElementById('humValue');
        const statusValue = document.getElementById('statusValue');
        const statusText = document.getElementById('statusText');
        const statusDot = document.getElementById('statusDot');
        const lastUpdate = document.getElementById('lastUpdate');
        const connectBtn = document.getElementById('connectBtn');
        const disconnectBtn = document.getElementById('disconnectBtn');
        const simulateBtn = document.getElementById('simulateBtn');
        const tempHistoryBody = document.getElementById('tempHistoryBody');
        const humHistoryBody = document.getElementById('humHistoryBody');
        const totalRecords = document.getElementById('totalRecords');
        const dataStatus = document.getElementById('dataStatus');
        const autoScrollBtn = document.getElementById('autoScrollBtn');

        // Configuraci√≥n del gr√°fico
        let historyChart;
        function initializeChart() {
            const ctx = document.getElementById('historyChart').getContext('2d');
            historyChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: historyData.timestamps,
                    datasets: [
                        {
                            label: 'Temperatura (¬∞C)',
                            data: historyData.temperatures,
                            borderColor: '#ff6b6b',
                            backgroundColor: 'rgba(255, 107, 107, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Humedad (%)',
                            data: historyData.humidities,
                            borderColor: '#4ecdc4',
                            backgroundColor: 'rgba(78, 205, 196, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(0,0,0,0.1)'
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            grid: {
                                color: 'rgba(0,0,0,0.1)'
                            },
                            title: {
                                display: true,
                                text: 'Temperatura (¬∞C)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            grid: {
                                drawOnChartArea: false,
                            },
                            title: {
                                display: true,
                                text: 'Humedad (%)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                color: '#333'
                            }
                        }
                    }
                }
            });
        }

        // Funci√≥n para agregar datos al historial
        function addToHistory(temperature, humidity, status) {
            const now = new Date();
            const timestamp = now.toLocaleTimeString();
            const fullTimestamp = now.toISOString();
            
            // Agregar nuevos datos
            historyData.timestamps.push(timestamp);
            historyData.temperatures.push(temperature);
            historyData.humidities.push(humidity);
            historyData.status.push(status);
            
            // Limitar el n√∫mero de registros
            if (historyData.timestamps.length > MAX_HISTORY_RECORDS) {
                historyData.timestamps.shift();
                historyData.temperatures.shift();
                historyData.humidities.shift();
                historyData.status.shift();
            }
            
            // Actualizar tablas
            updateHistoryTables();
            
            // Actualizar gr√°fico
            if (historyChart) {
                historyChart.data.labels = historyData.timestamps;
                historyChart.data.datasets[0].data = historyData.temperatures;
                historyChart.data.datasets[1].data = historyData.humidities;
                historyChart.update('none');
            }
            
            // Actualizar contadores
            totalRecords.textContent = historyData.timestamps.length;
            dataStatus.textContent = status === 'active' ? 'Datos activos' : 'Datos de simulaci√≥n';
        }

        // Funci√≥n para actualizar las tablas de historial
        function updateHistoryTables() {
            // Limpiar tablas
            tempHistoryBody.innerHTML = '';
            humHistoryBody.innerHTML = '';
            
            // Llenar tablas con datos hist√≥ricos (en orden inverso: m√°s reciente primero)
            for (let i = historyData.timestamps.length - 1; i >= 0; i--) {
                const tempRow = document.createElement('tr');
                tempRow.innerHTML = `
                    <td>${historyData.timestamps[i]}</td>
                    <td><span class="temp-badge">${historyData.temperatures[i].toFixed(1)}¬∞C</span></td>
                    <td>${historyData.status[i] === 'active' ? '‚úÖ Real' : 'üéÆ Simulado'}</td>
                `;
                tempHistoryBody.appendChild(tempRow);
                
                const humRow = document.createElement('tr');
                humRow.innerHTML = `
                    <td>${historyData.timestamps[i]}</td>
                    <td><span class="hum-badge">${Math.round(historyData.humidities[i])}%</span></td>
                    <td>${historyData.status[i] === 'active' ? '‚úÖ Real' : 'üéÆ Simulado'}</td>
                `;
                humHistoryBody.appendChild(humRow);
            }
            
            // Auto-scroll si est√° activado
            if (autoScroll) {
                const tempContainer = tempHistoryBody.parentElement;
                const humContainer = humHistoryBody.parentElement;
                tempContainer.scrollTop = 0;
                humContainer.scrollTop = 0;
            }
        }

        // Funci√≥n para limpiar el historial
        function clearHistory() {
            if (confirm('¬øEst√°s seguro de que quieres limpiar todo el historial?')) {
                historyData = {
                    timestamps: [],
                    temperatures: [],
                    humidities: [],
                    status: []
                };
                updateHistoryTables();
                if (historyChart) {
                    historyChart.update();
                }
                totalRecords.textContent = '0';
                dataStatus.textContent = 'Sin datos';
            }
        }

        // Funci√≥n para exportar historial
        function exportHistory() {
            if (historyData.timestamps.length === 0) {
                alert('No hay datos para exportar');
                return;
            }

            let csv = 'Fecha,Hora,Temperatura (¬∞C),Humedad (%),Tipo\n';
            for (let i = 0; i < historyData.timestamps.length; i++) {
                const date = new Date().toISOString().split('T')[0];
                const type = historyData.status[i] === 'active' ? 'Real' : 'Simulado';
                csv += `${date},${historyData.timestamps[i]},${historyData.temperatures[i].toFixed(1)},${Math.round(historyData.humidities[i])},${type}\n`;
            }

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `datos_meteorologicos_${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
            window.URL.revokeObjectURL(url);
        }

        // Funci√≥n para toggle auto-scroll
        function toggleAutoScroll() {
            autoScroll = !autoScroll;
            autoScrollBtn.textContent = autoScroll ? 'üîí Auto-Scroll: ON' : 'üîì Auto-Scroll: OFF';
            autoScrollBtn.classList.toggle('btn-primary', autoScroll);
            autoScrollBtn.classList.toggle('btn-warning', !autoScroll);
        }

        // Funci√≥n para conectar al puerto serial
        async function connectSerial() {
            try {
                if (!('serial' in navigator)) {
                    alert('‚ùå Tu navegador no soporta la API Serial.\n\nUsa Chrome 89+ o Edge 89+.');
                    return;
                }

                // Solicitar puerto
                port = await navigator.serial.requestPort();
                
                // Abrir puerto
                await port.open({ baudRate: 115200 });
                
                updateStatus('Conectado', 'Conectado al Arduino', true);
                
                // Habilitar/deshabilitar botones
                connectBtn.disabled = true;
                disconnectBtn.disabled = false;
                simulateBtn.disabled = true;

                // Leer datos
                readSerialData();

            } catch (error) {
                console.error('Error de conexi√≥n:', error);
                if (error.name === 'NotFoundError') {
                    alert('‚ùå No se seleccion√≥ ning√∫n puerto.');
                } else {
                    alert('‚ùå Error al conectar: ' + error.message);
                }
                updateStatus('Error', 'Error de conexi√≥n', false);
            }
        }

        // Funci√≥n para desconectar
        async function disconnectSerial() {
            if (reader) {
                await reader.cancel();
            }
            if (port) {
                await port.close();
            }
            
            port = null;
            reader = null;
            
            connectBtn.disabled = false;
            disconnectBtn.disabled = true;
            simulateBtn.disabled = false;
            
            updateStatus('Desconectado', 'Conexi√≥n cerrada', false);
            tempValue.textContent = '--.-';
            humValue.textContent = '--';
        }

        // Funci√≥n para leer datos del puerto serial
        async function readSerialData() {
            const decoder = new TextDecoder();
            let buffer = '';
            
            try {
                while (port.readable) {
                    reader = port.readable.getReader();
                    
                    try {
                        while (true) {
                            const { value, done } = await reader.read();
                            if (done) break;

                            buffer += decoder.decode(value);
                            const lines = buffer.split('\n');
                            
                            // Procesar l√≠neas completas
                            for (let i = 0; i < lines.length - 1; i++) {
                                const line = lines[i].trim();
                                processSerialLine(line);
                            }
                            
                            // Guardar l√≠nea incompleta para el pr√≥ximo chunk
                            buffer = lines[lines.length - 1];
                        }
                    } catch (error) {
                        console.error('Error leyendo:', error);
                    } finally {
                        reader.releaseLock();
                    }
                }
            } catch (error) {
                console.error('Error general:', error);
                updateStatus('Error', 'Error de lectura', false);
            }
        }

        // Funci√≥n para procesar cada l√≠nea del serial
        function processSerialLine(line) {
            console.log('Datos recibidos:', line);
            
            if (line.startsWith('{') && line.endsWith('}')) {
                try {
                    const data = JSON.parse(line);
                    updateDashboard(data);
                } catch (e) {
                    console.log('Error parseando JSON:', line);
                }
            }
        }

        // Funci√≥n para actualizar el dashboard
        function updateDashboard(data) {
            if (data.temperatura !== undefined && data.humedad !== undefined) {
                tempValue.textContent = data.temperatura.toFixed(1);
                humValue.textContent = Math.round(data.humedad);
                
                const now = new Date();
                lastUpdate.textContent = now.toLocaleTimeString();
                
                updateStatus('Activo', 'Recibiendo datos', true);
                
                // Agregar al historial
                addToHistory(data.temperatura, data.humedad, 'active');
                
            } else if (data.status) {
                updateStatus('Esperando', data.status, true);
            }
        }

        // Funci√≥n para actualizar el estado
        function updateStatus(value, text, isConnected) {
            statusValue.textContent = value;
            statusText.textContent = text;
            statusDot.className = isConnected ? 'status-dot connected' : 'status-dot';
        }

        // Funci√≥n para simular datos (cuando no hay Arduino)
        function simulateData() {
            if (isSimulating) {
                clearInterval(simulationInterval);
                simulateBtn.textContent = 'üéÆ Modo Simulaci√≥n';
                isSimulating = false;
                connectBtn.disabled = false;
                disconnectBtn.disabled = true;
                updateStatus('Desconectado', 'Modo simulaci√≥n desactivado', false);
                return;
            }

            isSimulating = true;
            simulateBtn.textContent = '‚è∏Ô∏è Detener Simulaci√≥n';
            connectBtn.disabled = true;
            disconnectBtn.disabled = true;

            simulationInterval = setInterval(() => {
                const simulatedData = {
                    temperatura: 20 + Math.random() * 10,
                    humedad: 40 + Math.random() * 30
                };
                updateDashboard(simulatedData);
                
                // Agregar al historial como datos simulados
                addToHistory(simulatedData.temperatura, simulatedData.humedad, 'simulated');
            }, 2000);

            updateStatus('Simulaci√≥n', 'Modo simulaci√≥n activo', true);
        }

        // Verificar compatibilidad al cargar
        document.addEventListener('DOMContentLoaded', function() {
            initializeChart();
            
            if (!('serial' in navigator)) {
                connectBtn.disabled = true;
                connectBtn.textContent = '‚ùå Navegador No Compatible';
                statusText.textContent = 'Usa Chrome/Edge 89+ con API Serial habilitada';
            }
        });
    </script>
</body>
</html>
